<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/position"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:drawableStart="@drawable/donut_2"
        android:paddingStart="16dp"
        android:text="CENTERED"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/compass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/compass"
        android:layout_width="256dp"
        android:layout_height="0dp"
        android:drawableStart="@drawable/donut_1"
        android:paddingStart="16dp"
        android:text="compass"
        android:textAlignment="center"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@+id/options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position" />

    <Button
        android:id="@+id/options"
        android:layout_width="256dp"
        android:layout_height="0dp"
        android:drawableStart="@drawable/donut_3"
        android:paddingStart="16dp"
        android:text="Options"
        android:textAlignment="center"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compass" />

</androidx.constraintlayout.widget.ConstraintLayout>