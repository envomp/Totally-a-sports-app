<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/position"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:drawableStart="@drawable/ic_gps_fixed_black_24dp"
        android:text="north-up"
        android:paddingLeft="16px"
        app:layout_constraintBottom_toTopOf="@+id/compass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/compass"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:drawableStart="@drawable/compass"
        android:text="compass"
        android:paddingLeft="16px"
        app:layout_constraintBottom_toTopOf="@+id/options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position" />

    <Button
        android:id="@+id/options"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:drawableStart="@drawable/ic_settings_black_24dp"
        android:text="Options"
        android:paddingLeft="16px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compass" />
</androidx.constraintlayout.widget.ConstraintLayout>